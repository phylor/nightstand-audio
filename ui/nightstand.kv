<Main>:
    manager: _screen_manager
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            size_hint: 1, .9
            id: _screen_manager
            Screen:
                name: 'main'
                BoxLayout:
                    Image:
                        source: 'gfx/no-figurine.png'
                        size: 250, 250
                    Label: 
                        text: 'Place a figurine on top of the box'

            Screen:
                name: 'playing'
                BoxLayout:
                    orientation: 'vertical'
                    Slider:
                        id: volume_slider
                        range: (0, 100)
                        value: 25
                        step: 6
                    BoxLayout:
                        Image:
                            source: 'gfx/figurine.png'
                            size: 250, 250
                        Label:
                            text: 'Playing..'
                    ReleasableSlider:
                        id: seek_slider
                        range: (0, 1)
                        value: 0
                        step: 0.05
                        on_release: app.seek_to_user()
                    Button:
                        text: 'Play / Pause'
                        on_release: app.togglePause()

            Screen:
                name: 'create_figurine'
                BoxLayout:
                    orientation: 'vertical'
                    ListView:
                        id: audio_list
                    BoxLayout:
                        Button:
                            text: 'Cancel'
                            on_release: _screen_manager.current = _screen_manager.state
                        Button:
                            text: 'Save'
                            on_release: app.save_figurine()
