<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    name: ''
    directory: ''
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.name
            font_size: 40
        Label:
            text: root.directory

<Main>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    manager: _screen_manager
    ScreenManager:
        id: _screen_manager
        Screen:
            name: 'main'
            BoxLayout:
                Image:
                    source: 'gfx/no-figurine.png'
                    size: 250, 250
                BigLabel: 
                    text: 'Place a figurine on top of the box'
                    text_size: self.width, None
                    size: self.texture_size

        Screen:
            name: 'playing'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, .1
                    spacing: 15
                    Slider:
                        id: volume_slider
                        range: (0, 100)
                        value: 100
                        step: 5
                        cursor_size: (100, 100)
                    Button:
                        id: play_pause_button
                        text: 'Play / Pause'
                        on_release: app.toggle_pause()
                        font_size: 40
                    Button:
                        text: 'Delete'
                        on_release: app.delete_figurine()
                        font_size: 40
                BoxLayout:
                    size_hint: 1, .8
                    Image:
                        source: 'gfx/figurine.png'
                        size: 250, 250
                    BigLabel:
                        id: playing_label
                        text: 'Playing..'
                        text_size: self.width, None
                        size: self.texture_size
                BoxLayout:
                    size_hint: 1, .1
                    ReleasableSlider:
                        id: seek_slider
                        size_hint: .9, 1
                        range: (0, 1)
                        value: 0
                        step: 0.05
                        on_release: app.seek_to_user()
                        value_track: True
                        value_track_color: [0.15, 0.7, 0.9, 1]
                        cursor_size: (100, 100)
                    Label:
                        id: seek_time
                        size_hint: .1, 1
                        text: ''
                        font_size: 40

        Screen:
            name: 'create_figurine'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, .1
                    ToggleButton:
                        text: 'Show all'
                        group: 'audio_list_filter'
                        state: 'down'
                        on_release: audio_list.show_all()
                    ToggleButton:
                        text: 'Show unused'
                        group: 'audio_list_filter'
                        on_release: audio_list.show_unused()
                AudioList:
                    id: audio_list
                    #size_hint: 1, .9
                    scroll_type: ['bars', 'content']
                    scroll_wheel_distance: dp(114)
                    bar_width: dp(40)
                    viewclass: 'SelectableLabel'
                    SelectableRecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: dp(2)
                BoxLayout:
                    size_hint: 1, .1
                    Button:
                        text: 'Cancel'
                        on_release: _screen_manager.current = 'main'
                        font_size: 40
                    Button:
                        text: 'Save'
                        on_release: app.save_figurine()
                        font_size: 40
