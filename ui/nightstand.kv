<Main>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    manager: _screen_manager
    ScreenManager:
        id: _screen_manager
        Screen:
            name: 'main'
            BoxLayout:
                Image:
                    source: 'gfx/no-figurine.png'
                    size: 250, 250
                BigLabel: 
                    text: 'Place a figurine on top of the box'
                    text_size: self.width, None
                    size: self.texture_size

        Screen:
            name: 'playing'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1, .1
                    Slider:
                        id: volume_slider
                        range: (0, 100)
                        value: 100
                        step: 5
                    Button:
                        id: play_pause_button
                        text: 'Play / Pause'
                        on_release: app.togglePause()
                BoxLayout:
                    size_hint: 1, .8
                    Image:
                        source: 'gfx/figurine.png'
                        size: 250, 250
                    BigLabel:
                        id: playing_label
                        text: 'Playing..'
                        text_size: self.width, None
                        size: self.texture_size
                ReleasableSlider:
                    size_hint: 1, .1
                    id: seek_slider
                    range: (0, 1)
                    value: 0
                    step: 0.05
                    on_release: app.seek_to_user()
                    value_track: True
                    value_track_color: [0.15, 0.7, 0.9, 1]

        Screen:
            name: 'create_figurine'
            BoxLayout:
                orientation: 'vertical'
                ListView:
                    id: audio_list
                BoxLayout:
                    Button:
                        text: 'Cancel'
                        on_release: _screen_manager.current = _screen_manager.state
                    Button:
                        text: 'Save'
                        on_release: app.save_figurine()
